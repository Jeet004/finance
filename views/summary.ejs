<!-- views/summary.ejs -->
<% title = 'Summary - Personal Finance' %>

<div class="container mt-5">
    <h1 class="text-center mb-4">Summary</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4>Income</h4>
                    <p>$<%= income.toFixed(2) %></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4>Expenses</h4>
                    <p>$<%= expenses.toFixed(2) %></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4>Balance</h4>
                    <p>$<%= balance.toFixed(2) %></p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h4>Categories</h4>
        <ul>
            <% if (categories && categories.length > 0) { %>
                <% categories.forEach(category => { %>
                    <li><%= category.name %>: $<%= category.total.toFixed(2) %></li>
                <% }) %>
            <% } else { %>
                <li>No categories available</li>
            <% } %>
        </ul>
    </div>
</div>
